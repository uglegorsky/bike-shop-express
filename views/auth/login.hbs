<div class="auth">
  <div class="row">
    <div class="col s6 offset-s3">
      <ul class="tabs auth__tabs">
        <li class="tab col s6"><a class="active" href="#login">Sign In</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="email" name="email" type="text" value="{{data.email}}" class="validate" required>
          <label for="email">Your Email</label>
          <span class="helper-text" data-error="Entry email"></span>
        </div>
        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Your password</label>
          <span class="helper-text" data-error="Entry password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <p>
          <a href="/auth/reset">Reset password</a>
        </p>
        <button class="btn btn-primary" type="submit">Sign In</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input id="r_name" name="name" type="text" class="validate" required>
          <label for="r_name">Your Name</label>
          <span class="helper-text" data-error="Entry name"></span>
        </div>
        <div class="input-field">
          <input id="r_email" name="email" type="email" class="validate" required>
          <label for="r_email">Your Email</label>
          <span class="helper-text" data-error="Entry email"></span>
        </div>
        <div class="input-field">
          <input id="r_password" name="password" type="password" class="validate" required>
          <label for="r_password">Your password</label>
          <span class="helper-text" data-error="Entry password"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Password confirm</label>
          <span class="helper-text" data-error="Entry password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Register</button>
      </form>
    </div>
  </div>
</div>