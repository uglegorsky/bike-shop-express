<h1>Profile</h1>

<div class="row">
  <div class="col s6">
    <img class="profile__avatar" src="/{{user.photoURL}}" title="{{user.name}}" alt="No image">
  </div>
  <div class="col s6">
    <form action="/profile?_csrf={{csrf}}" method="POST" enctype="multipart/form-data">
      <p>Your email: <b>{{user.email}}</b></p>
      <div class="input-field">
        <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required min="3">
        <label for="name">Your name</label>
        <span class="helper-text" data-error="Write name"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Profile image</span>
          <input type="file" name="photo">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <button class="btn btn-primary" type="submit">Change</button>
    </form>
  </div>
</div>