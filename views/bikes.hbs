<h1>Bikes</h1>

{{#if bikes.length }}
  <div class="row">
    {{#each bikes}}
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="{{img}}" alt="{{name}}" title="{{name}}">
          </div>
          <div class="card-content">
            <span class="card-title">{{name}}</span>
            <p class="card-content__cost js-format">{{price}}</p>
          </div>
          <div class="card-action">
            <a href="/bikes/{{_id}}" target="_blank">More info</a>
            {{#if @root.isAuth}}
              {{#ifeq userID._id @root.userID}}
                <a href="/bikes/{{_id}}/edit?allow=true">Edit</a>
              {{/ifeq}}
              <form class="card-action__cart-form" action="/cart/add" method="POST">
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-primary">Buy</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No bikes</p>
{{/if}}